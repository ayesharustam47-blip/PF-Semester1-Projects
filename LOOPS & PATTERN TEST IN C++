//DAY-1 LOOPS & PATTERNS TEST
//PRINT PATTERN 
1
12
123
1234
12345

#include <iostream>
using namespace std;
int main() {
    int n=5;
    for(int i=1;i<=n;i++){
        for(int j=1;j<=i;j++)
    cout<<j;
    cout<<endl;
    }
    return 0;
}


//PRINT PATTERN
12345
1234
123
12
1

#include <iostream>
using namespace std;
int main() {
    int n=5;
    for(int i=5;i<=n;i--){
        for(int j=1;j<=i;j++)
    cout<<j;
    cout<<endl;
    }
    return 0;
}
